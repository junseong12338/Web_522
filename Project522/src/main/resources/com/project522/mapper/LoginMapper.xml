<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.project522.mapper.LoginMapper">
    
    <!-- 
    
    입력한 id, pw를 가져옴.
    resultType -> 어디서 가져오는지. UserVO에서 user_id, user_pw를 가져온다.
    parameterType => 타입
    
     -->
  <select id="getUserInfo" parameterType="string" resultType="com.project522.domain.UserVO">
    SELECT user_id, user_pw, user_name, user_nickname, user_address
    FROM users
    WHERE user_id = #{user_id} AND password = #{password}
  </select>
    </mapper>	
